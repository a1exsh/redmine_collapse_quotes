<% content_for :header_tags do %>
<style type="text/css">
a.toggle-quoted-text { font-size: 85%; }
</style>

<script type="text/javascript">
function toggleQuotedTextVisibility(anchor) {
  anchor = $(anchor);
  blockquote = anchor.next("blockquote");
  blockquote.toggle();
  anchor.innerText = blockquote.visible() ? "<%=l :label_hide_quoted_text %>" : "<%=l :label_show_quoted_text %>";
  return false;
}
</script>
<% end %>
